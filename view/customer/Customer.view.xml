<mvc:View
	controllerName="sap.coveragemap.maintainmycustomer.controller.customer.Customer"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	busyIndicatorDelay="0">   
	<Page
		id="coverageMapUpdatePage"
		title="{i18n>pageTitle4UpdatePage}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
		<Panel
				id="custmerDetails"
				width="auto"
				class="sapUiNoContentPadding">
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
						columnsL="1" columnsM="1">
						<f:content>
							<Label text="{i18n>customer}" />
							<Text text="{customerModel>Customer}" />
							<Label text="{i18n>sector}" />
							<Text text="{customerModel>Sector}" />
							<Label text="{i18n>salesGroup}" />
							<Text text="{customerModel>BU}"/>
							<Label text="{i18n>aeName}" />
							<Text text="{customerModel>AE}" />
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>